<li>
    <article class="snippet">
            <img src="{{post.data.image}}" alt="{{post.data.imageAlt}}" class="snippet__image">
            <h3 class="snippet_title"><a href='{{post.url}}'>{{post.data.title}}</a></h3>
            <p class="snippet__meta">作者: <span>{{post.data.author}}</span> 時間: <span>{{post.data.date | postDate}}</span></p>
            <p class="snippet__body">{{post.data.description}}</p> 
            <a href="{{post.url}}" class="btn btn--primary">繼續閲讀</a>
    </article>
</li>